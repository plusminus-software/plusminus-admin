<div class="modal fade" id="modal-{{type}}-{{action}}" tabindex="-1" role="dialog" aria-labelledby="modal-{{type}}-label-{{action}}" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-{{type}}-label-{{action}}">{{title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#form}}
          {{>form}}
        {{/form}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-{{actionButton.color}}" url="{{url}}" onclick="{{actionButton.onClick}}">{{actionButton.name}}</button>
      </div>
    </div>
  </div>
</div>